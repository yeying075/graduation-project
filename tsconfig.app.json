{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*.ts", "src/**/*.tsx",  "src/**/*.vue", "*.d.ts", "src/**/*.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "defaultSeverity": "none",
  "compilerOptions": {
    "strict": false,

    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": []
  }
}
